            <command  title="Kernel">uname -sr</command>
            <command title="Host name">uname -n</command>
            <command title="CPU">cat /proc/cpuinfo | grep "model name" | head -n 1 | cut -d : -f 2</command>
            </command-group>
            <command-group id="2">
            <command title="Memory">/usr/libexec/cernvm-appliance-agent/scripts/memory_information</command>
            </command-group>
            <command-group id="3">
            <command title="Disk Information" format="table">df -hP /</command>
            </command-group>
        </action>
        
